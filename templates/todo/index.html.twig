{%- extends 'base.html.twig' -%}

{%- block title %}Todo{% endblock -%}

{%- block stylesheets -%}
    <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" />
{%- endblock -%}

{%- block javascripts -%}
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
{%- endblock -%}

{%- block body -%}
        <table class="table">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Category</th>
                    <th>Todo</th>
                    <th>Done?</th>
                </tr>
            </thead>
            <tbody>
                {%- for i, todo in todos -%}
                    <tr>
                        <th scope="row">{{- i + 1 -}}</th>
                        <td>
                            {%- if todo.category -%}
                                {{- todo.category.name -}}
                            {%- else -%}
                                {{- 'No Category' -}}
                            {%- endif -%}
                        </td>
                        <td>{{- todo.activity -}}</td>
                        <td>{%- if todo.done %}Done{% else %}-{% endif -%}</td>
                    </tr>
                {%- endfor -%}
            </tbody>
        </table>
{%- endblock -%}
